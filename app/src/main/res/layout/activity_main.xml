<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:orientation="horizontal"

    >

    <Button
        android:id="@+id/red_button"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:background="@drawable/button_red"
        style="@style/ButtonText"
        android:text="Power" />

    <Button
        android:text="1"
        android:id="@+id/black_button1"
        android:background="@drawable/btn_black"
        style="@style/ButtonText" />

    <Button
        android:text="2"
        android:id="@+id/black_button2"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:text="3"
        android:id="@+id/black_button3"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>


    <Button
        android:text="4"
        android:id="@+id/black_button4"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>
    <Button
        android:text="5"
        android:id="@+id/black_button5"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:text="6"
        android:id="@+id/black_button6"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:text="7"
        android:id="@+id/black_button7"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:text="8"
        android:id="@+id/black_button8"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:text="9"
        android:id="@+id/black_button9"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"/>

    <Button
        android:layout_rowSpan="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="INFO"
        android:id="@+id/black_button_plus"
        android:background="@drawable/btn_black"
        style="@style/ButtonText"
        />




</GridLayout>